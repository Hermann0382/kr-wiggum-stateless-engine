{
  "name": "kr-wiggum-stateless-engine",
  "version": "1.0.0",
  "description": "KR-Wiggum Stateless Engine - AI Memory Externalized to Files with Ralph Wiggum Loop Pattern",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "kr-manager": "./dist/manager-entry.js",
    "kr-worker": "./dist/worker-entry.js",
    "kr-wiggum": "./dist/cli.js",
    "kr-wiggum-server": "./dist/server.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "orchestrate": "bash scripts/orchestrate.sh"
  },
  "keywords": [
    "ai-agent",
    "state-management",
    "file-based-state",
    "ralph-wiggum-loop",
    "kreativreason"
  ],
  "author": "KreativReason",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "globals": "^17.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.53.0",
    "vitest": "^1.0.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
